<head>
	<meta charset="UTF-8">
	<title>{{title}}</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header rooms="rooms"}}


			<div id="contents">
				<div class="box">

					<div>
						<div class="body">
							<h1>Rooms</h1>

								<div class="filter by class-content">
							 Sort By Rate: 
 				 <button><a   href="/sortUp">Lowest->Highest</a> </button> &emsp;
				
				 <button><a href="/sortDown">Highest->Lowest </a> </button>
 				 </div>

							
							<ul id="sites">
								{{#each rooms}}
								<li>
									<a href="/api/rooms/{{this.code}}"><img src="images/{{this.image}}" alt="Img"></a>
									<h2><a href="/rooms">{{this.name}}</a></h2>
									{{{this.description}}}
									<br/>
									{{{this.rate}}}
								</li>
								{{/each}}
							</ul>
						
						
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}












	</div>
